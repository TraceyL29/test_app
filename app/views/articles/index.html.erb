

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
 <% @article.each do |articles| %>
  <tr>
    <td><strong><%= articles.title %></strong></td>
    <td><strong><%= articles.description %></strong></td>
    <td><%= link_to 'Edit', edit_article_path(articles) %></td>
    <td><%= link_to 'Show', article_path(articles) %></td>
    <td><%= link_to 'Delete', article_path(articles), method: :delete %></td>
  </tr>
      <% end %>
</tbody>

</table>

<p><%= link_to 'New Article', new_article_path %></p>
<br>
